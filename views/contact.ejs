<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h1>Daftar Kontak</h1>
      <a href="/contact/add" class="btn btn-primary mb-2 mt-4">Tambah Data Kontak</a>
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">No HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold mt-3" role="alert">
                Data kontak masih kosong.
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.id %>"
                class="btn btn-success btn-sm d-inline-flex gap-1"
                ><i class="bi bi-info-circle"></i>Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
